@model SpedizioniItalia.Models.Cliente

@{
    ViewBag.Title = "Login Cliente";
}

<h2>Login Cliente</h2>

@using (Html.BeginForm("LoginCliente", "Login", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    if (TempData["ErrorLogin"] != null)
    {
        <div class="alert alert-danger">
            Le credenziali del cliente non sono corrette
        </div>
    }

    <div class="mb-3">
        @Html.LabelFor(model => model.Nome, new { @class = "form-label" })
        @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="mb-3">
        @Html.LabelFor(model => model.Cognome, new { @class = "form-label" })
        @Html.EditorFor(model => model.Cognome, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="mb-3">
        @Html.LabelFor(model => model.CodiceFiscale, new { @class = "form-label" })
        @Html.EditorFor(model => model.CodiceFiscale, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <button type="submit" class="btn btn-primary">Login Cliente</button>
}
