@model SpedizioniItalia.Models.Azienda

@{
    ViewBag.Title = "Login Azienda";
}

<h2>Login Azienda</h2>

@using (Html.BeginForm("LoginAzienda", "Login", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    if (TempData["ErrorLogin"] != null)
    {
        <div class="alert alert-danger">
            Le credenziali dell'azienda non sono corrette
        </div>
    }

    <div class="mb-3">
        @Html.LabelFor(model => model.Nome, new { @class = "form-label" })
        @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="mb-3">
        @Html.LabelFor(model => model.PartitaIva, new { @class = "form-label" })
        @Html.EditorFor(model => model.PartitaIva, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <button type="submit" class="btn btn-secondary">Login Azienda</button>
}
